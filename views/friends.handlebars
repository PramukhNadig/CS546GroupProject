<div class="container py-4">

    <h1>Friends Feed</h1>
    <div class="row">
        <div class="col">
            {{#if feed}}
            <div class="feed">
                <ul>
                    {{#each feed}}
                    <div class="card p-3 my-3">
                        <a href="{{link}}">{{creatorUsername}} {{text}}</a>
                    </div>
                    {{/each}}
                </ul>
            </div>
            {{/if}}
        </div>
        <div class="col">
            {{#if friends}}
            <div class="friends">
                <h3>My friends</h3>
                <ul>
                    {{#each friends}}
                    <li><a href="/profile/{{this.id}}">{{this.username}}</a></li>
                    {{/each}}
                </ul>
            </div>
            {{else}}
            <div class="error">
                <p>No friends found. Why not meet some new people?</p>
            </div>
            {{/if}}
            {{#if allUsers}}
            <div class="otherUsers">
                <h3>All users</h3>
                <ul>
                    {{#each allUsers}}
                    <li><a href="/profile/{{this.id}}">{{this.username}}</a></li>
                    {{/each}}
                </ul>
            </div>
            {{/if}}
        </div>
    </div>
</div>