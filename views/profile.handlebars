<div class="container py-4">
  <h1>Profile for {{username}}</h1>
  <div>
    {{#if user}}
    {{#if areFriendsWith}}
    <button class="btn btn-primary" id="addFriendButton" disabled>Already friends</button>
    {{else}}
    <button class="btn btn-primary" onClick="addFriendButton('{{username}}')" id="addFriendButton">Add friend</button>
    {{/if}}
    {{/if}}

  </div>
  <div class="px-4 py-3 mb-4 bg-light rounded-3">
    <h4 class="text-secondary">Playlists</h4>
    <ul>
      {{#each playlists}}
      <li><a href="/playlists/{{_id}}">{{PlaylistName}}</a></li>
      {{/each}}
    </ul>
    <h4 class="text-secondary">Song Reviews</h4>
    {{#each songReviews}}
    <div class="card p-3 my-3">
      <p>-> Song name: {{this.songName}}</p>
      <p>Rating: {{this.rating}}</p>
      <p>Review Title: {{this.title}}</p>
      <p>Review Comment: {{this.comment}}</p>
    </div>
    {{/each}}
    <h4 class="text-secondary">Album Reviews</h4>
    {{#each albumReviews}}
    <div class="card p-3">
      <p>-> Album name: {{this.albumName}}</p>
      <p>Rating: {{this.rating}}</p>
      <p>Review Title: {{this.title}}</p>
      <p>Review Comment: {{this.comment}}</p>
    </div>
    {{/each}}
  </div>
</div>

<script src="/static/js/friends.js"></script>